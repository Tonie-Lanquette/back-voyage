{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
      
<div class="flex flex-col w-full min-h-fit items-center mt-20 ">
<div class="flex flex-col w-1/3 dark:bg-gray-800 bg-white px-10 py-16 rounded-lg">
    <table class="table">
        <tbody>
            <tr class="flex justify-center">
                <th>Id :</th>
                <td>{{ av_user.id }}</td>
            </tr>
            <tr class="flex justify-center">
                <th>Email :</th>
                <td class="flex justify-center">
                     {{ av_user.email }}
                </td>
            </tr>
            {# <tr class="flex justify-center">
                <th>Password :</th>
                <td>{{ av_user.password  }}</td>
            </tr> #}
            <tr class="flex justify-center">
                <th>First Name :</th>
                <td>{{ av_user.firstName }}</td>
            </tr>
            <tr class="flex justify-center">
                <th>Last Name :</th>
                <td>{{ av_user.lastName }}</td>
            </tr>
            <tr class="flex justify-center">
                <th>Phone :</th>
                <td>{{ av_user.phone }}</td>
            </tr>
        </tbody>
    </table>
</div> 
<div class="rounded bg-gray-500 w-fit px-4 py-2 my-4">
    <a href="{{ path('app_av_user_index') }}">back to list</a>
 </div>
 {% if is_granted('ROLE_ADMIN') or app.user.id == av_user.id %}
  <div class="rounded bg-gray-500 w-fit px-4 py-2 my-4">
        <a href="{{ path('app_av_user_edit', {'id': av_user.id}) }}">edit</a> 
 </div> 
  {% endif %} 
 <div class="rounded bg-red-500 w-fit px-4 py-2 my-4">
    {{ include('av_user/_delete_form.html.twig') }}
 </div>
</div>
{% endblock %}