{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="flex flex-col w-full h-screen dark:bg-gray-950 dark:text-white bg-gray-100 items-center justify-around">
    <form class="bg-white dark:bg-gray-700 shadow-md rounded px-8 py-12" method="post">
        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_av_logout') }}">Logout</a>
            </div>
        {% endif %}
            <div class="mb-4">
                <h1 class="h3 mb-3 font-bold text-2xl text-center">Login</h1>
            </div>
            <div class="mb-4">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="username">Email</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="email" required autofocus>
            </div>
            <div class="mb-6">
                <label class="block text-gray-700 text-sm font-bold mb-2" for="password">Password</label>
                <input type="password" name="_password" id="password" class="shadow appearance-none border border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline" autocomplete="current-password" placeholder="******************" required>
            </div>
            {% if error %}
                <div class="alert alert-danger my-6">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}">
            <div class="flex items-center justify-center">
                <button class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"  type="submit">
                    Sign in
                </button>
            </div> 
            
    </form>
</div>    


{% endblock %}
